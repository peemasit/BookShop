<Window x:Class="BookShop.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShop"
        mc:Ignorable="d"
        Title="MainMenu" Height="300" Width="400">
    <Grid>
        <Button Content="Manage Customers" FontSize="20" Width="250" Height="50" Margin="0,0,0,120" Click="ManageCustomers_Click"></Button>
        <Button Content="Manage Books" FontSize="20" Width="250" Height="50" Click="ManageBooks_Click"></Button>
        <Button Content="Order Books" FontSize="20" Width="250" Height="50" Margin="0,120,0,0" Click="OrderBooks_Click"></Button>
    </Grid>
</Window>
