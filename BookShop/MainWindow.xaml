<Window x:Class="BookShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShop"
        mc:Ignorable="d"
        Title="Book Shop Login" Height="200" Width="400">
    <Grid>
        <Label Content="Username" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,240,70"/>
        <Label Content="Password" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,240,0"/>
        <TextBox Name="UserTxt" Text="admin" FontSize="16" Width="200" Height="25" Margin="60,0,0,70"/>
        <PasswordBox Name="PasswordTxt" Password="123456" FontSize="16" Width="200" Height="25" Margin="60,0,0,0"/>
        <Button Content="Login" Click="Login_Click" Width="95" Height="25" Margin="60,70,105,0" />
        <Button Content="Exit" Width="95" Height="25" Margin="165,70,0,0" Click="Exit_Click"/>
    </Grid>
</Window>
